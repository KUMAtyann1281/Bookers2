<h2>User info</h2>

<table class='table'>
  <tr>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: "100x100" %>
    <% else %>
      <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <div class="edit-icon">
    <% if user == current_user %>
      <p><%= link_to "<i class='fas fa-user-gear'></i>".html_safe, edit_user_path(user) %></p>
    <% end %>
  </div>
</div>