<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render partial: 'shared/userinfo', locals: { user: @user } %>
      <%= render partial: 'shared/newbook', locals: { book: @user_book } %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="2"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag book.user.avatar %></td>
              <td><%= user.name %></td>
              <td></td>
              <td><%= link_to "show", show_user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>