<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <div class="book-errors">
        <% if @book.errors.any? %>
          <div class="book-errors-text">
            <strong><%= @book.errors.count %>errors prohibited this book from being saved:</strong>
            <ul class="book-errors-text2">
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-md-3'>
      <%= render partial: 'layouts/userinfo', locals: { user: @user_info_index } %>
      <%= render partial: 'layouts/newbook', locals: { book: @book } %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do%>
                  <%= image_tag book.user.get_profile_image %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td colspan="2"><%= book.body %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>