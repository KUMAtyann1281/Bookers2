<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label><br/>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br/>
  <label for="inputBody">Opinion</label><br/>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"感想"%><br/>
  <%= f.submit "Update Book" %>
<% end %>

<table class="book-column">
  <thead>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td class="border"><%= link_to "Show", book_path(@book.id) %></td>
      <td><%= link_to "Back", books_path %></td>
    <tr>
  <tbody>